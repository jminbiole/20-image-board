{# {% extends "master" %}
{% block content %}
<div class="full-page">
  <div class="app">
    <div class="header">
      <div class="header-btn_container">

        <i class="fa fa-plus-circle" aria-hidden="true"></i>
      </div>
    </div>
    <form class="new-img" action="/photos" method="POST">
      {{ csrfField }}
      <div class="add-img_container">
        <div class="input-block">
          <input class="img-url" type="text" placeholder="Image URL" value="">
          <input class="img-caption" type="textarea" placeholder="Image Caption" value="">
        </div>
        <div class="btn-block">
          <button class="cancel">CANCEL</button>
          <button class="submit"><i class="fa fa-picture-o" aria-hidden="true"></i>ADD IMAGE</button>
        </div>
      </div>
    </form>
    <section class="main-content">
      <div class="container">
        <div class="photo-tile">
          <div class="photo-frame">
            <img src="http://www.placecage.com/c/400/400" alt="">
          </div>
          <div class="photo-info">
            <p class="photo-text">This is Nick Cage. He is a psychopath. He eats garbage.</p>
          </div>
        </div>
        <div class="photo-tile">
          <div class="photo-frame">
            <img src="http://www.placecera.com/c/400/400" alt="">
          </div>
          <div class="photo-info">
            <p class="photo-text">This is Mikey Cers. He is an adult child. He only eats mac and cheese.</p>
          </div>

        </div>
      </div>
    </section>
  </div>
</div>
{% endblock %} #}
